{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noImplicitThis": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["vite.config.*", "src/**/*", "src/**/*.vue"],
  "exclude": ["**/*.spec.ts", "node_modules/"]
}
