
var Evade = {
    started: false,
    initialize: function() {
        Evade.startText1 = new TextObject("Evade", C_WIDTH/2, C_HEIGHT/2, 48);
        Evade.startText2 = new TextObject("Press space to start", C_WIDTH/2, 0.7*C_HEIGHT, 24);
        root.push(startText1);
        root.push(startText2);
    },
    startGame: function() {
        root.remove(Survive.startText1);
        root.remove(Survive.startText2);
        Evade.started = true;
    },
    gameOver: function() {
        Evade.started = false;
    },
    cleanup: function() {
        root.remove(Survive.startText1);
        root.remove(Survive.startText2);
    }
}